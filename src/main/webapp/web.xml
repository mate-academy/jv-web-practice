<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>createDriver</servlet-name>
        <servlet-class>mate.controller.CreateDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createDriver</servlet-name>
        <url-pattern>/create_new_driver</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllDriver</servlet-name>
        <servlet-class>mate.controller.GetAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllDriver</servlet-name>
        <url-pattern>/all_drivers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>createManufacturer</servlet-name>
        <servlet-class>mate.controller.CreateManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createManufacturer</servlet-name>
        <url-pattern>/create_new_manufacturer</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>createCar</servlet-name>
        <servlet-class>mate.controller.CreateCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createCar</servlet-name>
        <url-pattern>/create_new_car</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>success</servlet-name>
        <servlet-class>mate.controller.SuccessPageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>success</servlet-name>
        <url-pattern>/success</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>mate.controller.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/add_driver_to_car</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allManufacturers</servlet-name>
        <servlet-class>mate.controller.GetAllManufacturersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allManufacturers</servlet-name>
        <url-pattern>/get_all_manufacturers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allCars</servlet-name>
        <servlet-class>mate.controller.GetAllCarsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allCars</servlet-name>
        <url-pattern>/get_all_cars</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteController</servlet-name>
        <servlet-class>mate.controller.DeleteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteController</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
</web-app>
