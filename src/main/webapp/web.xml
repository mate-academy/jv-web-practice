<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>create_driver</servlet-name>
        <servlet-class>mate.controller.CreateDriverController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>display_drivers</servlet-name>
        <servlet-class>mate.controller.DisplayDriversController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>сreate_manufacturer</servlet-name>
        <servlet-class>mate.controller.CreateManufacturerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>сreate_car</servlet-name>
        <servlet-class>mate.controller.CreateCarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>add_driver</servlet-name>
        <servlet-class>mate.controller.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>display_manufacturers</servlet-name>
        <servlet-class>mate.controller.DisplayManufacturersController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>display_cars</servlet-name>
        <servlet-class>mate.controller.DisplayCarsController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>delete_manufacturer</servlet-name>
        <servlet-class>mate.controller.DeleteManufacturerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delete_driver</servlet-name>
        <servlet-class>mate.controller.DeleteDriverController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>delete_car</servlet-name>
        <servlet-class>mate.controller.DeleteCarController</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>create_driver</servlet-name>
        <url-pattern>/drivers/create</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>display_drivers</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>сreate_manufacturer</servlet-name>
        <url-pattern>/manufacturers/create</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>сreate_car</servlet-name>
        <url-pattern>/cars/create</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>add_driver</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>display_manufacturers</servlet-name>
        <url-pattern>/manufacturers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>display_cars</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>delete_car</servlet-name>
        <url-pattern>/cars/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>delete_driver</servlet-name>
        <url-pattern>/drivers/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>delete_manufacturer</servlet-name>
        <url-pattern>/manufacturers/delete</url-pattern>
    </servlet-mapping>
</web-app>
