<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterDriverController</servlet-name>
        <servlet-class>mate.controller.RegisterDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterDriverController</servlet-name>
        <url-pattern>/drivers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetAllDriversController</servlet-name>
        <servlet-class>mate.controller.GetAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllDriversController</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterManufacturerController</servlet-name>
        <servlet-class>mate.controller.RegisterManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterManufacturerController</servlet-name>
        <url-pattern>/manufacturers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterCarController</servlet-name>
        <servlet-class>mate.controller.RegisterCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterCarController</servlet-name>
        <url-pattern>/cars/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddDriverToCarController</servlet-name>
        <servlet-class>mate.controller.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDriverToCarController</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetAllManufacturersController</servlet-name>
        <servlet-class>mate.controller.GetAllManufacturersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllManufacturersController</servlet-name>
        <url-pattern>/manufacturers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteManufacturerController</servlet-name>
        <servlet-class>mate.controller.DeleteManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteManufacturerController</servlet-name>
        <url-pattern>/manufacturers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteDriverController</servlet-name>
        <servlet-class>mate.controller.DeleteDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteDriverController</servlet-name>
        <url-pattern>/drivers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetAllCarsController</servlet-name>
        <servlet-class>mate.controller.GetAllCarsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllCarsController</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteCarController</servlet-name>
        <servlet-class>mate.controller.DeleteCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCarController</servlet-name>
        <url-pattern>/cars/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetAllDriversByCarController</servlet-name>
        <servlet-class>mate.controller.GetAllDriversByCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllDriversByCarController</servlet-name>
        <url-pattern>/cars/drivers</url-pattern>
    </servlet-mapping>
</web-app>
