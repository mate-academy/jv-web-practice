<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>mate.controller.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/addDriverToCar</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllManufacturers</servlet-name>
        <servlet-class>mate.controller.GetAllManufacturersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllManufacturers</servlet-name>
        <url-pattern>/getAllManufacturers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteManufacturer</servlet-name>
        <servlet-class>mate.controller.DeleteManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteManufacturer</servlet-name>
        <url-pattern>/getAllManufacturers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllDrivers</servlet-name>
        <servlet-class>mate.controller.GetAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllDrivers</servlet-name>
        <url-pattern>/getAllDrivers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteDriver</servlet-name>
        <servlet-class>mate.controller.DeleteDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteDriver</servlet-name>
        <url-pattern>/getAllDrivers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllCars</servlet-name>
        <servlet-class>mate.controller.GetAllCarsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllCars</servlet-name>
        <url-pattern>/getAllCars</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteCar</servlet-name>
        <servlet-class>mate.controller.DeleteCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteCar</servlet-name>
        <url-pattern>/getAllCars/delete</url-pattern>
    </servlet-mapping>
</web-app>