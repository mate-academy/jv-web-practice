<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>mate.controller.car.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addDriver</servlet-name>
        <servlet-class>mate.controller.driver.AddDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addDriver</servlet-name>
        <url-pattern>/drivers/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>removeDriver</servlet-name>
        <servlet-class>mate.controller.driver.RemoveDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeDriver</servlet-name>
        <url-pattern>/drivers/remove</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllDrivers</servlet-name>
        <servlet-class>mate.controller.driver.GetAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllDrivers</servlet-name>
        <url-pattern>/drivers/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addManufacturer</servlet-name>
        <servlet-class>mate.controller.manufacturer.AddManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addManufacturer</servlet-name>
        <url-pattern>/manufacturers/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllManufacturers</servlet-name>
        <servlet-class>mate.controller.manufacturer.GetAllManufacturersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllManufacturers</servlet-name>
        <url-pattern>/manufacturers/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>removeManufacturer</servlet-name>
        <servlet-class>mate.controller.manufacturer.RemoveManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeManufacturer</servlet-name>
        <url-pattern>/manufacturers/remove</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addCar</servlet-name>
        <servlet-class>mate.controller.car.AddCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addCar</servlet-name>
        <url-pattern>/cars/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllCars</servlet-name>
        <servlet-class>mate.controller.car.GetAllCarsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllCars</servlet-name>
        <url-pattern>/cars/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>removeCar</servlet-name>
        <servlet-class>mate.controller.car.RemoveCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeCar</servlet-name>
        <url-pattern>/cars/remove</url-pattern>
    </servlet-mapping>
</web-app>
