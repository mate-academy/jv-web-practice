<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>newCar</servlet-name>
        <servlet-class>mate.controller.NewCarController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>allCars</servlet-name>
        <servlet-class>mate.controller.NewCarController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>create</servlet-name>
        <servlet-class>mate.controller.NewManufacturerController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>allManufacturer</servlet-name>
        <servlet-class>mate.controller.GetAllManufacturersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>newCar</servlet-name>
        <url-pattern>/newCar</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>allCars</servlet-name>
        <url-pattern>/allCars</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>create</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>allManufacturer</servlet-name>
        <url-pattern>/allManufacturer</url-pattern>
    </servlet-mapping>




</web-app>
