<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>driverCreator</servlet-name>
        <servlet-class>mate.controller.DriverCreatorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>driverCreator</servlet-name>
        <url-pattern>/driver/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>displayAllDrivers</servlet-name>
        <servlet-class>mate.controller.DisplayAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>displayAllDrivers</servlet-name>
        <url-pattern>/driver/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>manufacturerCreator</servlet-name>
        <servlet-class>mate.controller.ManufacturerCreatorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>manufacturerCreator</servlet-name>
        <url-pattern>/manufacturer/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>carCreator</servlet-name>
        <servlet-class>mate.controller.CarCreatorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>carCreator</servlet-name>
        <url-pattern>/car/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addDrivers</servlet-name>
        <servlet-class>mate.controller.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addDrivers</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>displayAllCars</servlet-name>
        <servlet-class>mate.controller.DisplayAllCarsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>displayAllCars</servlet-name>
        <url-pattern>/car/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>displayAllManufacturers</servlet-name>
        <servlet-class>mate.controller.DisplayAllManufacturersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>displayAllManufacturers</servlet-name>
        <url-pattern>/manufacturer/all</url-pattern>
    </servlet-mapping>
</web-app>
