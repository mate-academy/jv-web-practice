<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createDriverController</servlet-name>
        <servlet-class>mate.controller.driver.CreateDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createDriverController</servlet-name>
        <url-pattern>/drivers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllDriversController</servlet-name>
        <servlet-class>mate.controller.driver.GetAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllDriversController</servlet-name>
        <url-pattern>/drivers/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createManufacturerController</servlet-name>
        <servlet-class>mate.controller.manufacturer.CreateManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createManufacturerController</servlet-name>
        <url-pattern>/manufacturers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createCarController</servlet-name>
        <servlet-class>mate.controller.car.CreateCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createCarController</servlet-name>
        <url-pattern>/cars/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addDriverController</servlet-name>
        <servlet-class>mate.controller.car.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addDriverController</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteManufacturerController</servlet-name>
        <servlet-class>mate.controller.manufacturer.DeleteManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteManufacturerController</servlet-name>
        <url-pattern>/manufacturers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteDriverController</servlet-name>
        <servlet-class>mate.controller.driver.DeleteDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteDriverController</servlet-name>
        <url-pattern>/drivers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteCarController</servlet-name>
        <servlet-class>mate.controller.car.DeleteCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteCarController</servlet-name>
        <url-pattern>/cars/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllManufacturersController</servlet-name>
        <servlet-class>mate.controller.manufacturer.GetAllManufacturersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllManufacturersController</servlet-name>
        <url-pattern>/manufacturers/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllCarsController</servlet-name>
        <servlet-class>mate.controller.car.GetAllCarsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllCarsController</servlet-name>
        <url-pattern>/cars/</url-pattern>
    </servlet-mapping>
</web-app>
