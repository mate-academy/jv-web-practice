<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>IndexController</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexController</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddDriverController</servlet-name>
        <servlet-class>mate.controller.AddDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDriverController</servlet-name>
        <url-pattern>/drivers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetAllDriverController</servlet-name>
        <servlet-class>mate.controller.GetAllDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllDriverController</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllDeletingDriverController</servlet-name>
        <servlet-class>mate.controller.AllDeletingDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllDeletingDriverController</servlet-name>
        <url-pattern>/drivers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddManufacturerController</servlet-name>
        <servlet-class>mate.controller.AddManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddManufacturerController</servlet-name>
        <url-pattern>/manufacturers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetAllManufacturerController</servlet-name>
        <servlet-class>mate.controller.GetAllManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllManufacturerController</servlet-name>
        <url-pattern>/manufacturers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllDeletingManufacturerController</servlet-name>
        <servlet-class>mate.controller.AllDeletingManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllDeletingManufacturerController</servlet-name>
        <url-pattern>/manufacturers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddCarController</servlet-name>
        <servlet-class>mate.controller.AddCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCarController</servlet-name>
        <url-pattern>/cars/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetAllCarController</servlet-name>
        <servlet-class>mate.controller.GetAllCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllCarController</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllDeletingCarController</servlet-name>
        <servlet-class>mate.controller.AllDeletingCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllDeletingCarController</servlet-name>
        <url-pattern>/cars/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddDriverToCarController</servlet-name>
        <servlet-class>mate.controller.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDriverToCarController</servlet-name>
        <url-pattern>/drivers/car/add</url-pattern>
    </servlet-mapping>

</web-app>
