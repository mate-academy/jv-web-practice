<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>default</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addDriver</servlet-name>
        <servlet-class>mate.controller.driver.CreateDriverController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getAllDrivers</servlet-name>
        <servlet-class>mate.controller.driver.GetAllDriversController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addManufacturer</servlet-name>
        <servlet-class>mate.controller.manufacturer.CreateManufacturerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addCar</servlet-name>
        <servlet-class>mate.controller.car.CreateCarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>mate.controller.car.AddDriverToCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addDriver</servlet-name>
        <url-pattern>/drivers/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getAllDrivers</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addManufacturer</servlet-name>
        <url-pattern>/manufacturers/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addCar</servlet-name>
        <url-pattern>/cars/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>
</web-app>
