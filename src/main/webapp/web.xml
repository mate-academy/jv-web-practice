<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>


        <servlet-name>DisplayAllDriversController</servlet-name>
        <servlet-class>mate.controller.DisplayAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayAllDriversController</servlet-name>
        <url-pattern>/Drivers/allDrivers</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CreateDriverController</servlet-name>
        <servlet-class>mate.controller.CreateDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateDriverController</servlet-name>
        <url-pattern>/Drivers/createDriver</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>createCar</servlet-name>
        <servlet-class>mate.controller.CreateCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createCar</servlet-name>
        <url-pattern>/Cars/createCar</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DisplayAllCarsController</servlet-name>
        <servlet-class>mate.controller.DisplayAllCarsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayAllCarsController</servlet-name>
        <url-pattern>/Cars/allCars</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddDriverToCar</servlet-name>
        <servlet-class>mate.controller.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDriverToCar</servlet-name>
        <url-pattern>/CarsDrivers/addDriverToCar</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createManufacturer</servlet-name>
        <servlet-class>mate.controller.CreateManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createManufacturer</servlet-name>
        <url-pattern>/Manufacturers/createManufacturer</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>deleteDriver</servlet-name>
        <servlet-class>mate.controller.DeleteDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteDriver</servlet-name>
        <url-pattern>/Drivers/deleteDriver</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>deleteManufacturer</servlet-name>
        <servlet-class>mate.controller.DeleteManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteManufacturer</servlet-name>
        <url-pattern>/Manufacturers/deleteManufacturer</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DisplayAllManufacturersController</servlet-name>
        <servlet-class>mate.controller.DisplayAllManufacturersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayAllManufacturersController</servlet-name>
        <url-pattern>/Manufacturers/allManufacturers</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DeleteCarController</servlet-name>
        <servlet-class>mate.controller.DeleteCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCarController</servlet-name>
        <url-pattern>/Cars/deleteCar</url-pattern>
    </servlet-mapping>
</web-app>
