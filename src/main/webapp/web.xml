<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllManufacturersController</servlet-name>
        <servlet-class>mate.controller.GetAllManufacturersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllManufacturersController</servlet-name>
        <url-pattern>/manufacturers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>createNewManufacturerController</servlet-name>
        <servlet-class>mate.controller.CreateNewManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createNewManufacturerController</servlet-name>
        <url-pattern>/manufacturers/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteManufacturerController</servlet-name>
        <servlet-class>mate.controller.DeleteManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteManufacturerController</servlet-name>
        <url-pattern>/manufacturers/delete</url-pattern>
    </servlet-mapping>
    <!-- Driver Controllers -->
    <servlet>
        <servlet-name>getAllDriversController</servlet-name>
        <servlet-class>mate.controller.GetAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllDriversController</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>createNewDriverController</servlet-name>
        <servlet-class>mate.controller.CreateNewDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createNewDriverController</servlet-name>
        <url-pattern>/drivers/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteDriverController</servlet-name>
        <servlet-class>mate.controller.DeleteDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteDriverController</servlet-name>
        <url-pattern>/drivers/delete</url-pattern>
    </servlet-mapping>
    <!-- -->
    <servlet>
        <servlet-name>getAllCarsController</servlet-name>
        <servlet-class>mate.controller.GetAllCarsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllCarsController</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>
</web-app>
