<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cars_all</servlet-name>
        <servlet-class>mate.controller.GetAllCarsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cars_all</servlet-name>
        <url-pattern>/cars/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>drivers_all</servlet-name>
        <servlet-class>mate.controller.GetAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>drivers_all</servlet-name>
        <url-pattern>/drivers/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>manufacturers_all</servlet-name>
        <servlet-class>mate.controller.GetAllManufacturersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>manufacturers_all</servlet-name>
        <url-pattern>/manufacturers/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>drivers_add</servlet-name>
        <servlet-class>mate.controller.AddDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>drivers_add</servlet-name>
        <url-pattern>/drivers/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>manufacturers_add</servlet-name>
        <servlet-class>mate.controller.AddManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>manufacturers_add</servlet-name>
        <url-pattern>/manufacturers/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cars_add</servlet-name>
        <servlet-class>mate.controller.AddCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cars_add</servlet-name>
        <url-pattern>/cars/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>driver_to_car_add</servlet-name>
        <servlet-class>mate.controller.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>driver_to_car_add</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>manufacturer_delete</servlet-name>
        <servlet-class>mate.controller.DeleteManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>manufacturer_delete</servlet-name>
        <url-pattern>/manufacturers/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>driver_delete</servlet-name>
        <servlet-class>mate.controller.DeleteDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>driver_delete</servlet-name>
        <url-pattern>/drivers/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>car_delete</servlet-name>
        <servlet-class>mate.controller.DeleteCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>car_delete</servlet-name>
        <url-pattern>/cars/delete</url-pattern>
    </servlet-mapping>
</web-app>
