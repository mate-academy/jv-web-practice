<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>CreateDriver</servlet-name>
        <servlet-class>mate.controller.CreateDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateDriver</servlet-name>
        <url-pattern>/drivers/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AllDrivers</servlet-name>
        <servlet-class>mate.controller.GetAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllDrivers</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateManufacturer</servlet-name>
        <servlet-class>mate.controller.CreateManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateManufacturer</servlet-name>
        <url-pattern>/manufacturers/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AllManufacturer</servlet-name>
        <servlet-class>mate.controller.GetAllManufacturer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllManufacturer</servlet-name>
        <url-pattern>/manufacturers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateCar</servlet-name>
        <servlet-class>mate.controller.CreateCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCar</servlet-name>
        <url-pattern>/cars/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddDriverToCar</servlet-name>
        <servlet-class>mate.controller.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDriverToCar</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>
</web-app>
