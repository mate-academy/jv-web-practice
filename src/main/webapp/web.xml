<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>viewsPath</param-name>
        <param-value>/WEB-INF/views/</param-value>
    </context-param>
    <servlet>
        <servlet-name>getManufacturers</servlet-name>
        <servlet-class>mate.controller.manufacturers.DisplayAllController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addDrivers</servlet-name>
        <servlet-class>mate.controller.drivers.CreateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addManufacturers</servlet-name>
        <servlet-class>mate.controller.manufacturers.CreateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getCars</servlet-name>
        <servlet-class>mate.controller.cars.DisplayAllController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addCars</servlet-name>
        <servlet-class>mate.controller.cars.CreateCarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>mate.controller.cars.AddDriverToCar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getManufacturers</servlet-name>
        <url-pattern>/manufacturers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addManufacturers</servlet-name>
        <url-pattern>/manufacturers/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getCars</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addCars</servlet-name>
        <url-pattern>/cars/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getDrivers</servlet-name>
        <servlet-class>mate.controller.drivers.DisplayAllController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getDrivers</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addDrivers</servlet-name>
        <url-pattern>/drivers/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/WEB-INF/views/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
