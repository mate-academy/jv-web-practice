<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>mainMenu</servlet-name>
        <servlet-class>mate.controller.GetMenuController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mainMenu</servlet-name>
        <url-pattern>/mainMenu</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllDrivers</servlet-name>
        <servlet-class>mate.controller.drivers.GetAllDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllDrivers</servlet-name>
        <url-pattern>/cars/drivers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createDriver</servlet-name>
        <servlet-class>mate.controller.drivers.CreateDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createDriver</servlet-name>
        <url-pattern>/cars/drivers/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteDriver</servlet-name>
        <servlet-class>mate.controller.drivers.DeleteDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteDriver</servlet-name>
        <url-pattern>/cars/drivers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllManufacturers</servlet-name>
        <servlet-class>mate.controller.manufacturers.GetAllManufacturers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllManufacturers</servlet-name>
        <url-pattern>/manufacturers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createManufacturer</servlet-name>
        <servlet-class>mate.controller.manufacturers.CreateManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createManufacturer</servlet-name>
        <url-pattern>/manufacturers/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createCar</servlet-name>
        <servlet-class>mate.controller.cars.CreateCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createCar</servlet-name>
        <url-pattern>/cars/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllCars</servlet-name>
        <servlet-class>mate.controller.cars.GetAllCars</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllCars</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>mate.controller.cars.drivers.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/cars/addDriver</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteCar</servlet-name>
        <servlet-class>mate.controller.cars.DeleteCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteCar</servlet-name>
        <url-pattern>/cars/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteManufacturer</servlet-name>
        <servlet-class>mate.controller.manufacturers.DeleteManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteManufacturer</servlet-name>
        <url-pattern>/manufacturers/delete</url-pattern>
    </servlet-mapping>

</web-app>
